---
import { EMAIL_ADDRESS, PHONE_NUMBER } from "../consts";

const today = new Date();
---

<footer>
	<div class="footer-container">
		<div class="footer-section">
			<h3>Pfoten aller Art</h3>
			<p>Professionelle und liebevolle Betreuung f√ºr Haustiere aller Art in Witerthur Hegi.</p>
		</div>
		
		<div class="footer-section">
			<h3>Kontakt</h3>
			<ul class="footer-contact">
				<li>Hegifeld</li>
				<li>8404 Winterthur</li>
				<li>Tel: {PHONE_NUMBER}</li>
				<li>Email: {EMAIL_ADDRESS}</li>
			</ul>
		</div>
	</div>
	
	<div class="footer-bottom">
		<p>&copy; {today.getFullYear()} Pfoten aller Art. Alle Rechte vorbehalten.</p>
	</div>
</footer>

<style>
	footer {
		background-color: var(--primary);
		color: white;
		padding: 3rem 1rem 1rem;
	}
	
	.footer-container {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		max-width: 1200px;
		margin: 0 auto;
	}
	
	.footer-section h3 {
		color: white;
		margin-bottom: 1.5rem;
		position: relative;
		display: inline-block;
	}
	
	.footer-section h3::after {
		content: '';
		position: absolute;
		bottom: -0.5rem;
		left: 0;
		width: 120%;
		height: 1px;
		background-color: var(--secondary-light);
	}
	
	.footer-contact {
		list-style: none;
		padding: 0;
		margin: 0;
	}
	
	.footer-contact li {
		margin-bottom: 0.5rem;
	}
	
	.social-links {
		display: flex;
		gap: 1rem;
		margin-top: 1rem;
	}
	
	.social-links a {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 40px;
		height: 40px;
		border-radius: 50%;
		background-color: rgba(255, 255, 255, 0.1);
		transition: all 0.3s ease;
	}
	
	.social-links a:hover {
		background-color: var(--secondary);
		transform: translateY(-3px);
	}
	
	.footer-bottom {
		text-align: center;
		margin-top: 3rem;
		padding-top: 2rem;
		border-top: 1px solid rgba(255, 255, 255, 0.1);
		font-size: 0.9rem;
	}
	
	@media (max-width: 768px) {
		.footer-container {
			grid-template-columns: 1fr;
			text-align: center;
		}
		
		.footer-section h3::after {
			left: 50%;
			transform: translateX(-50%);
		}
		
		.social-links {
			justify-content: center;
		}
	}
</style>